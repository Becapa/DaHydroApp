<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dahydroshop.android.dahydroapp" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ByorActivity"
            android:label="Build Your Own Room">
        </activity>
        <activity
            android:name=".CompareActivity"
            android:label="Compare Prices">
        </activity>
        <activity
            android:name=".MessageActivity"
            android:label="Send a Message">
        </activity>
        <activity
            android:name=".AdminActivity"
            android:label="Log in as an admin">
        </activity>
        <activity
            android:name=".AdminLoggedIn"
            android:label="Administrator">
        </activity>
        <activity
            android:name=".SendNotificationActivity"
            android:label="Send out a notification">
        </activity>
        <activity
            android:name=".ViewMessagesActivity"
            android:label="Messages from users">
        </activity>

    </application>

</manifest>
